#:kivy 2.2.0

ScreenManager:
    id: screen_manager

    Screen:
        name: 'main'
        BoxLayout:
            orientation: 'vertical'

            MDTopAppBar:
                id: top_appbar
                title: ''
                md_bg_color: app.theme_cls.primary_color
                elevation: 4
            
            MDBottomNavigation:
                id: bottom_nav

                MDBottomNavigationItem:
                    id: home_tab
                    name: 'home'
                    text: ''
                    icon: 'home'
                    HomeScreen:
                        name: 'home'

                MDBottomNavigationItem:
                    id: scan_tab
                    name: 'scan'
                    text: ''
                    icon: 'qrcode-scan'
                    ScanScreen:
                        name: 'scan'
                
                MDBottomNavigationItem:
                    id: generate_tab
                    name: 'generate'
                    text: ''
                    icon: 'qrcode-plus'
                    GenerateScreen:
                        name: 'generate'
                
                MDBottomNavigationItem:
                    id: history_tab
                    name: 'history'
                    text: ''
                    icon: 'history'
                    HistoryScreen:
                        name: 'history'

                MDBottomNavigationItem:
                    id: profile_tab
                    name: 'profile'
                    text: ''
                    icon: 'account'
                    ProfileScreen:
                        id: profile_screen
                        name: 'profile'

    # Скрытые экраны(вне основного bottom_nav)
    EditProfileScreen:
        name: 'edit_profile'

    SettingsScreen:
        name: 'settings'

    AuthScreen:
        name: 'auth'

    RegistrationScreen:
        name: 'registration'  